<mvc:View displayBlock="true" controllerName="sapips.training.employeeapp.controller.ViewPage" height="100%"
		xmlns="sap.uxap"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m"
		xmlns:f="sap.f"
		xmlns:form="sap.ui.layout.form">
	<ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" isChildPage="true">
				<headerTitle>
					<ObjectPageDynamicHeaderTitle id="objPgeDyn">
						<expandedHeading>
							<m:Title id="fNameTitle" text="{employee>FirstName} {employee>LastName}" wrapping="true" class="sapUiSmallMarginEnd"/>
						</expandedHeading>

					</ObjectPageDynamicHeaderTitle>
				</headerTitle>

				<headerContent>
					<m:FlexBox id="flexB" wrap="Wrap" fitContainer="true" alignItems="Stretch">
						<m:VBox id="vBox" justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label id="fNameHead" text="{i18n>fName}"/>
							<m:Text id="fNLName" text="{employee>FirstName} {employee>LastName}"/>
						</m:VBox>
						<m:VBox id="vBoxs" justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label id="lvlText" text="{i18n>clvlTxt}"/>
							<m:Text id="careerLevel" text="{employee>CareerLevel}"/>
						</m:VBox>
                        <m:VBox id="vBox3" justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label id="lvlTxt2" text="{i18n>clvlTxt}"/>
							<m:Text id="carLvl" text="{employee>CareerLevel}"/>
						</m:VBox>
					</m:FlexBox>
				</headerContent>

		<sections>
			<ObjectPageSection id="objPgeSec" title="Employee Information">
				<subSections>
					<ObjectPageSubSection id="objPgSub">
						<blocks>
							<form:SimpleForm id="employeeForm"
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
                                    <m:Label id="eidTxt" text="eidTxt"/>
                                    <m:Text id="empId" text="{EmployeeID}" />
                                    <m:Label id="fName" text="{i18n>fName}"/>
                                    <m:Text id="firstName" text="{FirstName}" />
                                    <m:Label id="lName" text="{i18n>lnameTxt}"/>
                                    <m:Text id="lastName" text="{LastName}" />
                                    <m:Label id="ageText" text="{i18n>ageTxt}"/>
                                    <m:Text id="age" text="{Age}" />
                                    <m:Label id="hDateTxt" text="{i18n>hdateTxt}"/>
                                    <m:Text id="dateHire" text="{DateHire}" />
                                    <m:Label id="lvlTxt" text="{i18n>clvlTxt}"/>
                                    <m:Text id="careerLvl" text="{CareerLevel}" />
                                    <m:Label id="projTxt" text="{i18n>cprojTxt}"/>
                                    <m:Text id="current" text="{CurrentProject}" />

								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection id="objectPageSec" title="Skills">
				<subSections>
					<ObjectPageSubSection id="objectPageSubSec">
						<blocks>
                            <m:Table id="skillsTable" inset="false" mode="SingleSelectMaster" items="{filteredSkills>/Skills}" >
                                <m:columns>
                                    <m:Column id="idCol1">
                                        <m:Text id="idColText1" text="{i18n>skillTxt}" />
                                    </m:Column>
                                    <m:Column id="idCol2">
                                        <m:Text id="idColText2" text="{i18n>pro}" />
                                    </m:Column>
                                </m:columns>
								<m:items>
									<m:ColumnListItem id="columnListItem" vAlign="Middle">
										<m:cells>
											<m:Text id="skillName" text="{SkillName}" />
											<m:Text id="proficiencyId" text="{ProficiencyID}" />
										</m:cells>
									</m:ColumnListItem>
								</m:items>
                            </m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
        <!-- <f:footer>
            <Toolbar width="100%" id="idfooter" >
                <content>
                    <ToolbarSpacer id="spacer1"/>
                    <Button text="{i18n>edit}" id="editBtn" type="Emphasized"/>
                    <Button text="{i18n>cancel}" id="cancelBtn"/>
                </content>
            </Toolbar>
        </f:footer>     -->
	</ObjectPageLayout>
</mvc:View>