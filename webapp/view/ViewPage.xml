<mvc:View displayBlock="true" controllerName="sap.f.FlexibleColumnLayoutWithTwoColumnStart.controller.Detail" height="100%"
		xmlns="sap.uxap"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m"
		xmlns:f="sap.f"
		xmlns:form="sap.ui.layout.form">
	<ObjectPageLayout id="ObjectPageLayout"
					 showTitleInHeaderContent="true"
					alwaysShowContentHeader="false"
					preserveHeaderStateOnScroll="false"
					headerContentPinnable="true"
					isChildPage="true"
					upperCaseAnchorBar="false">
				<headerTitle>
					<ObjectPageDynamicHeaderTitle>
						<expandedHeading>
							<m:Title text="{products>Name}" wrapping="true" class="sapUiSmallMarginEnd"/>
						</expandedHeading>

						<snappedHeading>
							<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Center">
								<m:FlexBox wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
									<m:Title text="{products>Name}" wrapping="true" class="sapUiTinyMarginEnd"/>
								</m:FlexBox>
							</m:FlexBox>
						</snappedHeading>

						<navigationActions>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" id="enterFullScreenBtn" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" id="exitFullScreenBtn" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
							<m:OverflowToolbarButton type="Transparent" icon="sap-icon://decline" press="handleClose"  tooltip="Back" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
						</navigationActions>

						<actions>
							<m:Button
									text="Toggle Footer"
									type="Transparent"
									press="onToggleFooter"/>
							<m:Button
									icon="sap-icon://action"
									type="Transparent"/>
						</actions>

					</ObjectPageDynamicHeaderTitle>
				</headerTitle>

				<headerContent>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
						<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label text="{i18n>fName}"/>
							<m:Text text="{FirstName} {LastName}"/>
						</m:VBox>
						<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label text="{i18n>clvlTxt}"/>
							<m:Text text="{CareerLevel}"/>
						</m:VBox>
                        <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label text="{i18n>clvlTxt}"/>
							<m:Text text="{CareerLevel}"/>
						</m:VBox>
					</m:FlexBox>
				</headerContent>

		<sections>
			<ObjectPageSection title="Employee Information">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
                                    <m:Label text="eidTxt"/>
                                    <m:Text text="{EmployeeID}" />
                                    <m:Label text="{i18n>fName}"/>
                                    <Text text="{FirstName}" />
                                    <m:Label text="{i18n>lnameTxt}"/>
                                    <Text text="{LastName}" />
                                    <m:Label text="{i18n>ageTxt}"/>
                                    <Text text="{Age}" />
                                    <m:Label text="{i18n>hdateTxt}"/>
                                    <Text text="{DateHire}" />
                                    <m:Label text="{i18n>clvlTxt}"/>
                                    <Text text="{CareerLevel}" />
                                    <m:Label text="{i18n>cprojTxt}"/>
                                    <Text text="{CurrentProject}" />

								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Skills">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
                            <m:Table id="skillsTable" inset="false" mode="SingleSelectMaster">
                                <m:columns>
                                    <m:Column id="idCol1">
                                        <Text id="idColText1" text="{i18n>skillTxt}" />
                                    </m:Column>
                                    <m:Column id="idCol2">
                                        <Text id="idColText2" text="{i18n>pro}" />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem id="idColListItem1" vAlign="Middle">
                                        <m:cells>
                                            <Text id="idText1" text="{SkillName}" />
                                            <Text id="idText2" text="{ProficiencyID}" />
                                        </m:cells>
                                    </m:ColumnListItem>
                                    <m:ColumnListItem id="idColListItem2" vAlign="Middle">
                                        <m:cells>
                                            <Text id="idText4" text="{SkillName}" />
                                            <Text id="idText5" text="{ProficiencyID}" />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
        <footer>
            <Toolbar width="100%" id="idfooter">
                <content>
                    <ToolbarSpacer id="spacer1"/>
                    <Button text="{i18n>edit}" id="editBtn" type="Emphasized"/>
                    <Button text="{i18n>cancel}" id="cancelBtn"/>
                </content>
            </Toolbar>
        </footer>    
	</ObjectPageLayout>
</mvc:View>